<h1><%= t('spree_slider.new_slide') %></h1>
<%= render 'spree/shared/error_messages', target: @slide %>

<%= form_for [:admin, @slide] , html: { multipart: true } do |f| %>

  <%= render 'form', f: f %>

  <div class="form-group">
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  </div>
<% end %>
